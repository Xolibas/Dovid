@using Dovid.Models
@model Train
@{
    ViewBag.Title = "Замовлення квитка";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Замовлення квитка</title>
</head>
<body>
    <div>
        <fieldset>
            <legend>Інформація про потяг</legend>
            <div class="display-label"><b>Звідки</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.SPos)
            </div>
            <div class="display-label"><b>Куди</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.FPos)
            </div>
            <div class="display-label"><b>Час прибуття</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.STime)
            </div>
            <div class="display-label"><b>Час від’їзду</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.FTime)
            </div>
            <div class="display-label"><b>Кількість вагонів</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.VCount)
            </div>
            <div class="display-label"><b>Ціна</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Price)
            </div>
            <div class="display-label"><b>Станції</b></div>
            <ul>
                @foreach (Station s in Model.Stations)
                {
                    <li>@s.Name</li>
                }
            </ul>
        </fieldset>
        <h3>Оформлення квитка</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.ProductId" name="TrainId" />
            <table>
                <tr>
                    <td><p>Введіть своє ім’я: </p></td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть своє прізвище: </p></td>
                    <td><input type="text" name="SName" /> </td>
                </tr>
                <tr>
                    <td><p>Введіть свою адресу:</p></td>
                    <td>
                        <input type="text" name="Adress" />
                    </td>
                </tr>
                <tr><td><input type="submit" value="Замовити" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>


